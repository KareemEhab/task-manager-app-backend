# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# JWT Secret Key - REQUIRED
# Generate a strong random string for production (e.g., use: openssl rand -base64 32)
SECRET_KEY=your-secret-key-here-change-in-production

# MongoDB Connection String - REQUIRED
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Example for local: mongodb://localhost:27017
# Example for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net
DB=mongodb://localhost:27017

# MongoDB Database Name - REQUIRED
DB_NAME=task-manager

# Server Port - OPTIONAL (defaults to 3000)
PORT=3000

# Node Environment - OPTIONAL (defaults to development)
# Options: development, production
NODE_ENV=development